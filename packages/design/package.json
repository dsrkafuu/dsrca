    "chalk": "^4.1.2",
    "eslint": "^8.28.0",
    "fs-extra": "^10.1.0",
    "npm-run-all": "^4.1.5",
    "rollup": "^3.3.0",
    "glob": "^8.0.3",
    "nodemon": "^2.0.20",
    "typescript": "^4.9.3"
  }
